<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="elcolegainformatico.antonio.puertoapp">

    <!--
        The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
        Google Maps Android API v2, but you must specify either coarse or fine
        location permissions for the 'MyLocation' functionality.
   -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to access external storage for Camera-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>


    <!--- Need to use pictures with big size  (lines: 28,29,30) -->
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/logo_puerto_ceuta"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_puerto_ceuta"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden"
        android:configChanges="orientation|keyboardHidden|keyboard|screenSize"
        android:screenOrientation="locked"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/CustomTheme">

        <activity android:name=".activities.MenuActivity"  android:screenOrientation="portrait" >

        </activity>

        <activity android:name=".activities.InfraccionesListActivity"  android:screenOrientation="portrait" />

        <activity android:name=".activities.ArticulosListActivity"  android:screenOrientation="portrait"/>

        <activity android:name=".activities.ArticuloEditActivity"  android:screenOrientation="portrait"/>

        <activity android:name=".activities.EntidadVehiculoActivity" android:screenOrientation="portrait" />

        <service android:name=".activities.GPSTracker" android:enabled="true" />

        <activity android:name=".activities.ValidarActivity" android:screenOrientation="portrait" />

        <activity android:name=".gallery_list_photos.Gallery_MainActivity" android:screenOrientation="portrait" />

        <activity android:name=".gallery_list_photos.Gallery_ShowImageActivity" />

        <activity android:name=".activities.ResetPasswordActivity"/>

        <activity android:name=".login.view.LoginActivity">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />

                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
        </activity>

        <activity android:name=".registration.view.SignupActivity" />


    </application>

</manifest>