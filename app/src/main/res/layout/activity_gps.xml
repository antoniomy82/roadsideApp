<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/lb_ArticuloSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:background="?attr/colorButtonNormal"
        android:gravity="center_vertical|center"
        android:text="@string/lb_ArticuloSel"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSelectedArt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:background="?attr/colorButtonNormal"
        android:gravity="center_vertical|center"
        android:text="@string/tvSelectedArt"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10sp"
        android:layout_weight="0.13"
        android:gravity="center_horizontal|center"
        android:text="@string/tvAddress"
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/btnGetLocation"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0sp"
        android:background="@color/colorPrimary"
        android:text="@string/btnGetLocation"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="bottom|center"
        android:text="@string/lbAddress"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="@string/edAddress"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/lbZona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:text="@string/lbZona"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/edZone"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_weight="0.02"
        android:background="@color/colorPrimary"
        android:text="@string/btnNext"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


</LinearLayout>

